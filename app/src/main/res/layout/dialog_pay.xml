<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <cn.bittonet.wftpay.felonehelper.widget.RoundLinearLayout
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:rv_cornerRadius="10dp"
        app:rv_backgroundColor="@color/white"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="确认要离开收银台？" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_color_9b"
            android:text="超过支付时效后订单将被取消，请尽
        快完成支付" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_pay_dialog_cancel"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="继续支付" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_pay_dialog_ok"
                android:gravity="center"
                android:text="确认离开"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>
    </cn.bittonet.wftpay.felonehelper.widget.RoundLinearLayout>

</LinearLayout>